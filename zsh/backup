function envgrab () {
  source $GOPATH/src/gitlab.myteksi.net/gophers/go/scripts/set-env.sh ci
}

aws-ips () {
  aws --output text --region ap-southeast-1 ec2 describe-instances --filters "Name=tag:Name,Values=${1}" | grep -i --color PRIVATEIPADDRESSES | awk '{ print $4 }' | tr '\n' ' '
}

alias tf="terraform"


function sgtoname () {
  aws --profile grab ec2 describe-security-groups --output json --group-id "$1" | jq ".SecurityGroups[0].GroupName"
}

function plan () {
  if $(echo "$PWD" | grep -q prd > /dev/null)
  then
    AWS_PROFILE=grab tf plan
  fi
}
